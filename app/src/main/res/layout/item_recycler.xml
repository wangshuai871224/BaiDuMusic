<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/live_img"
        android:src="@mipmap/zhaoliying"
        android:scaleType="fitXY"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/live_img"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:id="@+id/live_num"
        android:textColor="#ffffff"
        android:drawableLeft="@mipmap/img_live_play_people"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/live_img"
        android:layout_alignRight="@id/live_img"
        android:padding="10dp"
        android:src="@mipmap/ic_live_play_normal"/>
</RelativeLayout>

    <TextView
        android:id="@+id/nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="12dp"
        android:textColor="#000000"
        android:text="我是赵丽颖"
        />

</LinearLayout>